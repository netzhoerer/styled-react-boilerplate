{
    "name": "codeshot",
    "version": "1.0.0",
    "description": "Codeshots beautiful code screenshots",
    "scripts": {
        "start": "NODE_ENV=production webpack --config .config/webpack.config.dev.js",
        "build": "webpack --mode production",
        "now-build": "npm run build",
        "test": "xo && stylelint './src/**/*.js'"
    },
    "main": "src/index.js",
    "repository": "https://github.com/netzhoerer/codeshot",
    "author": "Torsten Mirow",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@babel/plugin-proposal-export-default-from": "^7.2.0",
        "@babel/preset-env": "^7.4.3",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "css-loader": "^2.1.1",
        "eslint-config-xo-react": "^0.19.0",
        "eslint-plugin-react": "^7.12.4",
        "eslint-plugin-react-hooks": "^1.5.1",
        "extract-css-chunks-webpack-plugin": "^4.3.0",
        "file-loader": "^3.0.1",
        "friendly-errors-webpack-plugin": "^1.7.0",
        "html-webpack-plugin": "^3.2.0",
        "imagemin": "^6.1.0",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngquant": "^7.0.0",
        "img-loader": "^3.0.1",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.11.0",
        "offline-plugin": "^5.0.6",
        "sass-loader": "^7.1.0",
        "script-ext-html-webpack-plugin": "^2.1.3",
        "style-loader": "^0.23.1",
        "stylelint": "^9.10.1",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.5.2",
        "terser-webpack-plugin": "^1.2.3",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0",
        "webpack-dev-server": "^3.2.1",
        "webpack-pwa-manifest": "^4.0.0",
        "xo": "^0.24.0"
    },
    "dependencies": {
        "babel-plugin-react-css-modules": "^5.2.4",
        "modern-normalize": "^0.5.0",
        "react": "^16.8.4",
        "react-dom": "^16.8.4",
        "react-hot-loader": "^4.8.0",
        "webpack-merge": "^4.2.1"
    },
    "xo": {
        "nodeVersion": ">=10",
        "parser": "babel-eslint",
        "envs": [
            "node",
            "browser"
        ],
        "extends": "xo-react",
        "settings": {
            "react": {
                "version": "16.8"
            }
        },
        "rules": {
            "import/no-unassigned-import": "off"
        },
        "browserslist": [
            ">0.2%",
            "not dead",
            "not ie <= 11",
            "not op_mini all",
            "ie 10"
        ]
    }
}
